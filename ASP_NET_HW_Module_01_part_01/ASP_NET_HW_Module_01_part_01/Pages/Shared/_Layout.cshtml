<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP_NET_HW_Module_01_part_01</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP_NET_HW_Module_01_part_01.styles.css" asp-append-version="true" />
</head>
<style>
    .blackbroder {
        border-right:3px solid black;
        border-radius:10px;
    }

    .purplebroder {
        border: 3px solid purple;
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 purplebroder" style="margin-left:30px">
                        <li class="nav-item blackbroder">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ZAD1">ZAD1</a>
                        </li>
                        <li class="nav-item blackbroder">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ZAD2">ZAD2</a>
                        </li>
                        <li class="nav-item blackbroder">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ZAD3">ZAD3</a>
                        </li>
                        <li class="nav-item blackbroder">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ZAD5">ZAD5</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ASP_NET_HW_Module_01_part_01 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>